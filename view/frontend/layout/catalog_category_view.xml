<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="AdeoWeb_WeatherConditions::css/weathertype-banner.css" rel="stylesheet"/>
    </head>
    <body>
        <referenceContainer name="content">
            <referenceBlock  name="category.products">
                <referenceBlock class="Magento\Catalog\Block\Product\ListProduct" name="category.products.list" as="product_list" template="AdeoWeb_WeatherConditions::product/list.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">AdeoWeb\WeatherConditions\ViewModel\WeatherTypeListingBanner</argument>
                    </arguments>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
