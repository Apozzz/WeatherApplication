<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/api/user/:userId">
        <service class="AdeoWeb\WeatherApplication\Api\UserRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/api/product-weather">
        <service class="Magento\Catalog\Api\ProductRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/api/user/:userId/:weatherTypeId">
        <service class="AdeoWeb\WeatherApplication\Api\UserRepositoryInterface" method="saveById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
