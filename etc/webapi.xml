<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/weathertype">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/weathertype">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/weathertype">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/weathertype">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/weathertype/id/:weatherTypeId">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/weathertype/name/:weatherTypeName">
        <service class="AdeoWeb\WeatherConditions\Api\WeatherTypeRepositoryInterface" method="getByName"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
