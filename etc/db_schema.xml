<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="adeoweb_weatherconditions_weathertype" resource="default" engine="innodb"
           comment="WeatherType Table">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="WeatherType ID"/>
        <column xsi:type="int" name="status" padding="1" unsigned="true" nullable="false" identity="false" default="0" comment="WeatherType Status"/>
        <column xsi:type="text" name="name" nullable="false" comment="WeatherType Name"/>
        <column xsi:type="text" name="alias" nullable="true" comment="WeatherType Alias"/>
        <column xsi:type="text" name="icon" nullable="true" comment="WeatherType Icon"/>
        <column xsi:type="text" name="description" nullable="true" comment="WeatherType Description"/>
        <column xsi:type="datetime" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created_At"/>
        <column xsi:type="datetime" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated_At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ADEOWEB_WEATHERTYPE_NAME_ALIAS_ICON_DESCRIPTION" indexType="fulltext">
            <column name="name"/>
            <column name="alias"/>
            <column name="icon"/>
            <column name="description"/>
        </index>
    </table>
</schema>
